extends _layout
include includes/_mixins.pug


block title
	title Инфраструктура
block config
	- var main = true
block content
	.header-wrapper
		+contacts-header
		.wrapper-bg(style="background-image:url('img/promo.jpg')")
		.box
			.header-inner.header-inner_inner-page
				.header-inner__title.fade-down
					h1.h1 Инфраструктура
	.box
		+breadcrumbs(['Главная', 'Инфраструктура'])
	.box
		.content-wrap
			aside.side-bar.js-stick-parent
				.side-bar-nav.js-stick
					a(href="#").side-bar-nav__mob-btn.show-sidebar-menu
						span.link-value ...
						span.link-i-arrow
							+icon('arrow_down')
					+link-navigation(['Команда', 'Документация', 'Сертификаты', 'Инфраструктура', 'Новости', 'Галерея'])
			.content-inner
				.infrastructure-links
					+infrastructure-links-item(['Система электроснабжения', 'Система кондиционирования', 'Система пожаротушения ', 'Телекоммуникации', 'Комплексная безопасность'])
				.content-area
					h2 ЦОД обеспечен двумя независимыми оптическими подключениями, что гарантирует доступность каналов связи
					.datacenter-characteristics.datacenter-characteristics_data
						+datacenter-characteristics('99,982%', 'Уровень доступности сервисов')
						+datacenter-characteristics('35000 м²', 'Общая проектная площадь')
						+datacenter-characteristics('6620 м²', 'Площадь зданий и сооружений')
					p Современные требования к ИТ-инфраструктуре предполагают максимальную доступность данных для операционной деятельности любого бизнеса практически в любой точке мира, что обусловлено виртуализацией ИТ-решений, которая многократно повышает скорость, масштаб и экономическую выгоду для предприятий.
					.youtube(data-embed='OiLdgNA6hlM')
						.play-button
							.play-button-icon
					h3 Современные требования к ИТ-инфраструктуре предполагают максимальную доступность данных
					p Современные требования к ИТ-инфраструктуре предполагают максимальную доступность данных для операционной деятельности любого бизнеса практически в любой точке мира, что обусловлено виртуализацией ИТ-решений, которая многократно повышает скорость, масштаб и экономическую выгоду для предприятий.
					hr
					h3 Результат
						+link-more('Смотреть все фото','title-link')
					.inner-slider
						.inner-slider-init
							.inner-slider__slide
								img(src="img/inner-slide-1.jpg", alt="")
							.inner-slider__slide
								img(src="img/inner-slide-2.jpg", alt="")
							.inner-slider__slide
								img(src="img/inner-slide-1.jpg", alt="")
							.inner-slider__slide
								img(src="img/inner-slide-2.jpg", alt="")
							.inner-slider__slide
								img(src="img/inner-slide-1.jpg", alt="")
						.inner-slider-nav
							button(type="button").inner-slider__prev
								+icon('arrow')
							.slider-counter
								.slider-curr . . . 
								.slider-divider /
								.slider-total . . .
							button(type="button").inner-slider__next
								+icon('arrow')

					p Современные требования к ИТ-инфраструктуре предполагают максимальную доступность данных для операционной деятельности любого бизнеса практически в любой точке мира, что обусловлено виртуализацией ИТ-решений, которая многократно повышает скорость, масштаб и экономическую выгоду для предприятий.
					.bg-gray
						h3 Дата-центры подключены к точкам обмена трафиком MSK-IX, DATA-IX. Точки присутствия на ММТС-9, ММТС-10. Собственная оптоволоконная сеть
						ul
							li Все активное оборудование дублируется по принципу N+1
							li Энергосистема организована на базе двух независимых вводов как со стороны городских сетей, так и оборудования клиента
							li Климатическое оборудование также построено на базе резервирования
							li При проведении профилактических работ функционирование ЦОД функционирует в обычном режиме не страдает
							li ЦОД обеспечен двумя независимыми оптическими подключениями, что гарантирует доступность каналов связи
					
					h3 Система электроснабжения
					.parameters-table
						dl.data-parameters
							dt.data-parameters__title.text-small Общая электрическая мощность
							dd.data-parameters__desc.text-small 8 МВт
							dt.data-parameters__title.text-small Электрическая мощность модуля
							dd.data-parameters__desc.text-small 2 МВт
							dt.data-parameters__title.text-small Гарантированное внешнее электроснабжение
							dd.data-parameters__desc.text-small 2 акт. линии по 10 кВ
							dt.data-parameters__title.text-small Гарантированное электроснабжение
							dd.data-parameters__desc.text-small 2N
						dl.data-parameters
							dt.data-parameters__title.text-small Дизель-генераторные установки
							dd.data-parameters__desc.text-small N+1
							dt.data-parameters__title.text-small Внешние топливохранилища
							dd.data-parameters__desc.text-small 24 ч
							dt.data-parameters__title.text-small Бесперебойное питание (UPS)
							dd.data-parameters__desc.text-small 2N 
							dt.data-parameters__title.text-small Электрическая мощность одного шкафа
							dd.data-parameters__desc.text-small до 12 кВт