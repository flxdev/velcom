include _mixins.pug

.footer-info
	.box
		.footer-info__inner
			.footer-info__wrap
				.footer-logo-wrap
					a.footer-logo__link(href="")
						+icon('velcom-logo')
				.footer-info__nav
					+link-navigation(['Главная', 'Приватность информации', 'Дата-Центр', 'Услуги', 'Партнеры', 'Клиенты и проекты', 'Контакты'])
			.footer-info__wrap
				.footer-contacts
					p.footer-contacts__title.text-small Справочно-информационная служба
					h5.footer-contacts__phone +375 29 600 04 11, доб. 6
					p.text-primary.text-primary_black с мобильного телефона velcom по номеру 411, бесплатно в сети velcom
					.footer-contacts__working-hours
						p.text-primary Пн–пт: 8:00–21:00
						p.text-primary Сб–вс: выходной 
				.footer-action
					.footer-social
						a(href="#").footer-social__link.footer-social__link_insta
							+icon('social-instagram')
						a(href="#").footer-social__link.footer-social__link_vk
							+icon('social-vk')
						a(href="#").footer-social__link.footer-social__link_yout
							+icon('social-youtube')
						a(href="#").footer-social__link.footer-social__link_fb
							+icon('social-facebook')
						a(href="#").footer-social__link.footer-social__link_tw
							+icon('social-twitter')
					+search-form('footer-search', '')
				.footer-more-info
					p.text-small Взаимодействие между клиентом и компанией по вопросам предоставления услуги происходит посредством электронной почты &#32;
						strong sales@vdc.by
						|&nbsp;и мобильного номера &#32;
						strong 411-6
						|.
					p.text-small При отправлении сообщений на данный адрес в теме письма необходимо указывать номер договора.
