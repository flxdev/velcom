mixin search-form(add_class, value)
	div(class="search-form search-form_"+add_class)
		form.search-form__form(action="#")
			input(type="search", value=""+value).search-form__field
			button.search-form__serch-btn(type="submit")
				+icon('search')

mixin link-navigation(links)
	ul.link-navigation
		each link,index in links
			if index == 0
				li.link-navigation__item
					a.link-navigation__link.link-navigation__link_active(href="#")= link
			else 
				li.link-navigation__item
					a.link-navigation__link(href="#")= link

