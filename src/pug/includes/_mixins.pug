mixin link-more(text, add_class)
	a.link-more(href="#", class=""+add_class)= text
		span.link-more__arrow
			+icon('arrow-circle')

mixin datacenter-characteristics(val, text)
	.datacenter-characteristics__item
		p.datacenter-characteristics__value= val
		p.datacenter-characteristics__desc.text-primary= text

mixin v-style-text(text)
	span.v-style-text=text

mixin news-item(img, short_text, date, add_class, tags)
	if(add_class)
		.news-item(class=""+add_class)
			a(href="").news-item__inner
				.news-item__img(class=""+add_class)
					img(src="img/"+img, alt="")
				.news-item__short(class=""+add_class)
					p.text-primary.news-item__text= short_text
					p.text-primary.news-item__date= date
						span.news-item__tags= tags
	else
		.news-item
			a(href="").news-item__inner
				.news-item__img
					img(src="img/"+img, alt="")
				.news-item__short
					p.text-primary.news-item__text= short_text
					p.text-primary.news-item__date= date
						span.news-item__tags= tags

mixin breadcrumbs(crumbs)
	.breadcrumbs
		each crumb in crumbs
			a.breadcrumbs__link(href="#")= crumb

mixin worker-item(photo, name, position)
	.worker-item
		.worker-item__photo
			img(src="img/worker/"+photo, alt="worker-item")
		p.worker-item__name= name
		p.worker-item__position= position

mixin document-item(date, title)
	a(href="#").document-item
		.document-item__info
			p.document-item__date= date
			p.document-item__title= title
		.document-item__icon
			+icon('documents')

mixin sertificate(data, title, min_img, i)
	a(href="#").sertificate-item.js-popup-button(data-modal='sertificate', data-href='/sertificate-popup.html', data-slideto=''+i+'').ajax-trigger
		.sertificate-item__img
			img(src="img/"+min_img, alt="sertificate")
		.sertificate-item__info
			h4.h4.sertificate-item__title= title
			p.text-small.sertificate-item__date= data