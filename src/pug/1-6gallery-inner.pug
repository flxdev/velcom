extends _layout
include includes/_mixins.pug


block title
	title Галерея 
block config
	- var main = true
block content
	.header-wrapper
		+contacts-header
		.wrapper-bg(style="background-image:url('img/promo.jpg')")
		.box
			.header-inner.header-inner_inner-page
				.header-inner__title.fade-down
					h1.h1 Галерея
	.box
		+breadcrumbs(['Главная', 'Галерея'])
	.box
		.content-wrap
			aside.side-bar.js-stick-parent
				.side-bar-nav.js-stick
					a(href="#").side-bar-nav__mob-btn.show-sidebar-menu
						span.link-value ...
						span.link-i-arrow
							+icon('arrow_down')
					+link-navigation(['Команда', 'Документация', 'Сертификаты', 'Инфраструктура', 'Новости', 'Галерея'])
			.content-inner
				.content-inner-group.fade-down
					h2.h2 Правила оферты
					p.text-primary 18 фото
					.gallery-inner
						+gallery-photo('gallery-photo-1.jpg', 0)
						+gallery-photo('gallery-photo-2.jpg', 1)
						+gallery-photo('gallery-photo-3.jpg', 2)
						+gallery-photo('gallery-photo-4.jpg', 3)
						+gallery-photo('gallery-photo-5.jpg', 4)
						+gallery-photo('gallery-photo-6.jpg', 5)
						+gallery-photo('gallery-photo-7.jpg', 6)
						+gallery-photo('gallery-photo-8.jpg', 7)