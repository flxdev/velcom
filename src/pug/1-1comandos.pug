extends _layout
include includes/_mixins.pug


block title
	title Comandos
block config
	- var main = true
block content
	.header-wrapper
		+contacts-header
		.wrapper-bg(style="background-image:url('img/promo.jpg')")
		.box
			.header-inner.header-inner_inner-page
				.header-inner__title.fade-down
					h1.h1 Команда
	.box
		+breadcrumbs(['Главная', 'Команда'])
	.box
		.content-wrap
			aside.side-bar.js-stick-parent
				.side-bar-nav.js-stick
					a(href="#").side-bar-nav__mob-btn.show-sidebar-menu
						span.link-value ...
						span.link-i-arrow
							+icon('arrow_down')
					+link-navigation(['Команда', 'Документация', 'Сертификаты', 'Инфраструктура', 'Новости', 'Галерея'])
			.content-inner
				.content-inner-group
					h2.h2.content-inner-group__title.fade-up Руководство
					.content-inner-group-wrap.fade-down
						+worker-item('worker-1.jpg', 'Юлия Самойлова', 'Генеральный директор')
