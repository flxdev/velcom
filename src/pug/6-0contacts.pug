extends _layout
include includes/_mixins.pug


block title
	title Контакты
block config
	- var main = true
block content
	.header-wrapper
		+contacts-header
		.wrapper-bg(style="background-image:url('img/promo.jpg')")
		.box
			.header-inner.header-inner_inner-page
				.header-inner__title.fade-down
					h1.h1 Контакты
	.box
		+breadcrumbs(['Главная', 'Контакты'])
	.box
		.content-wrap
			aside.side-bar.js-stick-parent
				.side-bar-banner.js-stick
					+link-banner('Бесплатный звонок в сети velcom 411', 'Заказать звонок', 'side-banner-1.jpg')
			.content-inner
				.contats-page
					.contacts-page__title.fade-up
						h2.h2 Дата-центр velcom
						+link-more('Обратная связь', 'main-news__more-news')
					.contacts-wrap.fade-down
						.contacts-item
							p.text-small.contacts-item__title Справочно-информационная служба
							.contacts-item__link.contacts-item__link_big
								a(href="tel:+375 29 600 04 11") +375 29 600 04 11
								| , доб.&nbsp;6
							.contacts-item__link
								a(href="mailto:info@velcom.by") info@velcom.by
							p.text-small.contacts-item__subtitle Тел./факс
							.contacts-item__link.contacts-item__link_big
								a(href="tel:+375 29 600 04 12") +375 29 600 04 12
						.contacts-item
							p.text-small.contacts-item__title Техническая поддержка
							.contacts-item__link.contacts-item__link_big
								a(href="tel:+375 29 600 20 20") +375 29 600 20 20
							.contacts-item__link.contacts-item__link_big
								a(href="tel:+375 29 600 20 20") +375 29 600 20 20
							.contacts-item__link
								a(href="mailto:support@velcom.by") support@velcom.by
						.contacts-item
							p.text-small.contacts-item__title Адрес
							.text-primary.text-primary_black ул. Новорязанская, д. 26, стр. 1 220056, Республика Беларусь, г. Минск
							ul.text-primary.contacts-item__subtitle
								li Пн–пт: 8:00–21:00
								li Сб–вс: выходной
							.contacts-item__link
								a(href="#") Схема проезда
									span.contacts-item__link-icon
										+icon('download')
						.contacts-item
							p.text-small.contacts-item__title Реквизиты
							.text-primary.text-primary_black УП «Велком» Юридический адрес: 220030, Республика Беларусь, г.Минск, ул. Интернациональная, 36-2. Почтовый адрес: 220141, г. Минск, пр. Независимости, д. 168, корп. 2, к. 12

					.map-container.fade-down
						#map.map-elem(data-lat='53.943744', data-lon='27.521280', data-icon='img/svg/point.svg')
					.contacts-form.fade-down
						form(action="#").js-validate
							.form-block
								.form-block__head
									.h2.form-block__title Форма заказа услуги
									.text-small Заполните форму и мы перезвоним вам в течение 
										strong 30 минут
								.form-block__body
									hr.form-content-devider
									.form-content
										.form-content-head Контактные данные
										.input-row
											.input-item.w100
												.input-wrapper
													input.input-main(
														type="text",
														data-validation="required",
														data-validation-error-msg="Поле обязательно для заполнения",
														name="clieentName",
														id="clieentName"
													)
													label.input-label(for="clieentName") ФИО*
											.input-item.w50
												.input-wrapper
													input.input-main(
														type="phone",
														data-validation="custom",
														data-validation-regexp="^[-0-9()+ ]+$",
														data-validation-error-msg="Введите корректный номер телефона",
														name="clieentPhone",
														id="clieentPhone")
													label.input-label(for="clieentPhone") Телефон*
											.input-item.w50
												.input-wrapper
													input.input-main(
														type="text",
														data-validation="email",
														data-validation-error-msg="Введите корректный e-mail",
														name="clieentEmail",
														id="clieentEmail"
													)
													label.input-label(for="clieentEmail") Email*
									hr.form-content-devider
									.form-content
										.form-content-head Тема обращения
										.input-row
											.input-item.w100
												.input-wrapper
													.select-check.js-select-custom
														.select-carret
															+icon('arrow_down')
														button.selects.dropdown(data-placeholder='Категория вопроса *')
															span.btn-text Категория вопроса *
														.dropdown-target
															.dropdown-inner
																.dropdown-content
																	.select-u-body.select-list
																		label.option
																			input(
																				type='radio',
																				name='yeats',
																				value='Категория вопроса 1',
																				data-validation="required",
																				data-validation-error-msg="Выберите тему обращения"
																				)
																			span Категория вопроса 1
																		label.option
																			input(
																				type='radio',
																				name='yeats',
																				value='Категория вопроса 2',
																				data-validation="required",
																				data-validation-error-msg="Выберите тему обращения"
																				)
																			span Категория вопроса 2
																		label.option
																			input(
																				type='radio',
																				name='yeats',
																				value='Категория вопроса 3',
																				data-validation="required",
																				data-validation-error-msg="Выберите тему обращения"
																				)
																			span Категория вопроса 3
																		label.option
																			input(
																				type='radio',
																				name='yeats',
																				value='Категория вопроса 4',
																				data-validation="required",
																				data-validation-error-msg="Выберите тему обращения"
																				)
																			span Категория вопроса 4
											.input-item.w100
												.input-wrapper
													textarea.input-main(
														type="text",
														rows="9",
														data-validation="required")
													label.input-label Вопрос *
								.form-block__footer
									.input-row
										.input-item.w100
											label.check-label
												input(
													type="checkbox",
													data-trigger="btn-submit")
												.check-label__custom
													.check-label__checked
														+icon('checked')
												| Даю согласие на обработку моих 
												a(href="#") персональных данных
									button.button-submit.disabled-field(type="submit", data-target="btn-submit", value="Оставить заявку") Оставить заявку