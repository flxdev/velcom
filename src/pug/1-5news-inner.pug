extends _layout
include includes/_mixins.pug


block title
	title Новости
block config
	- var main = true
block content
	.header-wrapper
		+contacts-header
		.wrapper-bg(style="background-image:url('img/promo.jpg')")
		.box
			.header-inner.header-inner_inner-page.header-inner_animate
				.header-inner__title
					h1.h1 Новости
	.box
		+breadcrumbs(['Главная', 'дата-центр', 'Новости'])
	.box
		.content-wrap
			aside.side-bar.js-stick-parent
				.side-bar-nav.js-stick
					a(href="#").side-bar-nav__mob-btn.show-sidebar-menu
						span.link-value ...
						span.link-i-arrow
							+icon('arrow_down')
					+link-navigation(['Новости', 'О Дата-центре', 'Документация', 'Сертификаты', 'Инфраструктура', 'Команда', 'Галерея'])
			.content-inner
				.content-area
					h2 Приняли участие в панельной дискуссии в рамках Мир ЦОД 2017
					p 25 августа 2017
					img(src="img/news-bg-2.jpg", alt="image")
					h3 Современные требования к ИТ-инфраструктуре предполагают максимальную доступность данных
					p Современные требования к ИТ-инфраструктуре предполагают максимальную доступность данных для операционной деятельности любого бизнеса практически в любой точке мира, что обусловлено виртуализацией ИТ-решений, которая многократно повышает скорость, масштаб и экономическую выгоду для предприятий.

					.inner-slider
						.inner-slider-init
							.inner-slider__slide
								img(src="img/inner-slide-2.jpg", alt="")
							.inner-slider__slide
								img(src="img/inner-slide-1.jpg", alt="")
							.inner-slider__slide
								img(src="img/inner-slide-2.jpg", alt="")
						.inner-slider-nav
							button(type="button").inner-slider__prev
								+icon('arrow')
							.slider-counter
								.slider-curr . . . 
								.slider-divider /
								.slider-total . . .
							button(type="button").inner-slider__next
								+icon('arrow')

					p Современные требования к ИТ-инфраструктуре предполагают максимальную доступность данных для операционной деятельности любого бизнеса практически в любой точке мира, что обусловлено виртуализацией ИТ-решений, которая многократно повышает скорость, масштаб и экономическую выгоду для предприятий.
					.content-area-footer
						+link-more('Вернуться назад', 'back-link')
		.main-news.main-news_bt
			.main-news__wrap
				+news-item('news-1.jpg', '«Классика у Ратуши с velcom» подарила минчанам фотовыставку с лучшими моментами фестиваля', '25 августа 2017', 'news-index', 'Сми о нас')
				+news-item('news-2.jpg', '#velcombegom: минские бегуны впервые проведут 24-часовую эстафету-марафон', '23 августа 2017', 'news-index', 'События')